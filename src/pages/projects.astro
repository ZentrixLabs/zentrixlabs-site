---
import SiteLayout from "../layouts/Layout.astro";
import { getCollection } from 'astro:content';
const all = await getCollection('projects');
const publishedProjects = all.filter(p => p.data.published);
const enterpriseProjects = publishedProjects.filter(p => p.data.category === 'enterprise').sort((a,b)=>a.data.order-b.data.order);
const mediaProjects = publishedProjects.filter(p => p.data.category === 'media').sort((a,b)=>a.data.order-b.data.order);
---
<SiteLayout title="Projects â€” ZentrixLabs">
  <div class="projects-header">
    <h1>Our Projects</h1>
    <p class="subtitle">Innovative solutions for modern infrastructure and indie development</p>
  </div>

  <!-- Enterprise Tools Section -->
  <div class="category-section">
    <div class="category-header">
      <div class="category-icon">
        <i class="fa-duotone fa-solid fa-building"></i>
      </div>
      <h2>Enterprise Tools</h2>
      <p class="category-description">Professional solutions for infrastructure, security, and system administration</p>
    </div>
    
    <div class="projects-grid">
    {enterpriseProjects.map((entry, index) => (
      <a href={`/${entry.slug}`} class="project-card" style={`animation-delay: ${index * 0.1}s`}>
        <div class="card-glow"></div>
        <div class="card-content">
          {entry.data.heroImage ? (
            <div class="project-logo">
              <img src={entry.data.heroImage} alt={entry.data.title} />
            </div>
          ) : (
            <div class="project-icon">
              <i class={`fa-${entry.data.title.toLowerCase().includes('windows') ? 'brands fa-windows' : 'duotone fa-solid'} ${
                entry.data.title.toLowerCase().includes('windows') ? '' : 
                entry.data.title.toLowerCase().includes('netshift') ? 'fa-network-wired' : 
                index === 0 ? 'fa-rocket-launch' : 'fa-microchip'
              }`}></i>
            </div>
          )}
          <h2 class="project-title">{entry.data.title}</h2>
          <p class="project-description">{entry.data.short}</p>
          <div class="badge-row">
            <span class={`badge status ${entry.data.status}`}>{entry.data.status}</span>
            <span class={`badge source ${entry.data.repo ? 'open' : 'closed'}`}>{entry.data.repo ? 'Open Source' : 'Closed Source'}</span>
          </div>
          <div class="card-footer">
            <span class="view-more">
              View Details
              <i class="fa-solid fa-arrow-right"></i>
            </span>
          </div>
        </div>
      </a>
    ))}
    </div>
  </div>

  <!-- Media Apps Section -->
  <div class="category-section">
    <div class="category-header">
      <div class="category-icon media-icon">
        <i class="fa-duotone fa-solid fa-clapperboard"></i>
      </div>
      <h2>Media Apps</h2>
      <p class="category-description">Tools for video processing, subtitle management, and media workflows</p>
    </div>
    
    <div class="projects-grid">
    {mediaProjects.map((entry, index) => (
      <a href={`/${entry.slug}`} class="project-card" style={`animation-delay: ${index * 0.1}s`}>
        <div class="card-glow"></div>
        <div class="card-content">
          {entry.data.heroImage ? (
            <div class="project-logo">
              <img src={entry.data.heroImage} alt={entry.data.title} />
            </div>
          ) : (
            <div class="project-icon">
              <i class={`fa-${entry.data.title.toLowerCase().includes('windows') ? 'brands fa-windows' : 'duotone fa-solid'} ${
                entry.data.title.toLowerCase().includes('windows') ? '' : 
                entry.data.title.toLowerCase().includes('netshift') ? 'fa-network-wired' : 
                index === 0 ? 'fa-rocket-launch' : 'fa-microchip'
              }`}></i>
            </div>
          )}
          <h2 class="project-title">{entry.data.title}</h2>
          <p class="project-description">{entry.data.short}</p>
          <div class="badge-row">
            <span class={`badge status ${entry.data.status}`}>{entry.data.status}</span>
            <span class={`badge source ${entry.data.repo ? 'open' : 'closed'}`}>{entry.data.repo ? 'Open Source' : 'Closed Source'}</span>
          </div>
          <div class="card-footer">
            <span class="view-more">
              View Details
              <i class="fa-solid fa-arrow-right"></i>
            </span>
          </div>
        </div>
      </a>
    ))}
    </div>
  </div>

  {publishedProjects.length === 0 && (
    <div class="empty-state">
      <div class="empty-icon">
        <i class="fa-duotone fa-solid fa-box-open"></i>
      </div>
      <h3>No projects yet</h3>
      <p>Check back soon for exciting new projects!</p>
    </div>
  )}

  <style>
    .projects-header {
      text-align: center;
      margin-bottom: 4rem;
      animation: fadeIn 0.6s ease;
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .projects-header h1 {
      font-size: 3.5rem;
      font-weight: 900;
      background: linear-gradient(135deg, #39ff14 0%, #1f4fff 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      margin-bottom: 1rem;
    }

    .subtitle {
      font-size: 1.2rem;
      color: #a1a1aa;
      max-width: 600px;
      margin: 0 auto;
    }

    .category-section {
      margin-bottom: 5rem;
    }

    .category-header {
      text-align: center;
      margin-bottom: 3rem;
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 1rem;
    }

    .category-icon {
      font-size: 3.5rem;
      --fa-primary-color: #1f4fff;
      --fa-secondary-color: #a855f7;
      --fa-secondary-opacity: 0.6;
      animation: categoryPulse 3s ease-in-out infinite;
    }

    .category-icon.media-icon {
      --fa-primary-color: #f59e0b;
      --fa-secondary-color: #ef4444;
      --fa-secondary-opacity: 0.7;
    }

    @keyframes categoryPulse {
      0%, 100% { transform: scale(1); opacity: 1; }
      50% { transform: scale(1.05); opacity: 0.9; }
    }

    .category-header h2 {
      font-size: 2.5rem;
      font-weight: 800;
      background: linear-gradient(135deg, #1f4fff 0%, #a855f7 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      margin: 0;
    }

    .category-description {
      font-size: 1.05rem;
      color: #a1a1aa;
      max-width: 500px;
      margin: 0;
    }

    .projects-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
      gap: 2rem;
      margin-bottom: 3rem;
    }

    .project-card {
      position: relative;
      background: rgba(255, 255, 255, 0.03);
      border: 1px solid rgba(255, 255, 255, 0.1);
      border-radius: 20px;
      padding: 2rem;
      text-decoration: none;
      color: inherit;
      transition: all 0.3s ease;
      overflow: hidden;
      animation: slideUp 0.6s ease backwards;
    }

    @keyframes slideUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .card-glow {
      position: absolute;
      top: -50%;
      left: -50%;
      width: 200%;
      height: 200%;
      background: radial-gradient(circle, rgba(31, 79, 255, 0.1) 0%, transparent 70%);
      opacity: 0;
      transition: opacity 0.5s ease;
      pointer-events: none;
    }

    .project-card:hover .card-glow {
      opacity: 1;
    }

    .project-card:hover {
      transform: translateY(-8px);
      border-color: rgba(57, 255, 20, 0.4);
      box-shadow: 0 20px 60px rgba(31, 79, 255, 0.3);
      background: rgba(255, 255, 255, 0.05);
    }

    .card-content {
      position: relative;
      z-index: 1;
    }

    .project-logo {
      width: 120px;
      height: 120px;
      margin-bottom: 1.5rem;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 1rem;
      background: rgba(255, 255, 255, 0.05);
      border-radius: 20px;
      border: 1px solid rgba(255, 255, 255, 0.1);
      transition: all 0.3s ease;
    }

    .project-logo img {
      max-width: 100%;
      max-height: 100%;
      object-fit: contain;
      transition: transform 0.3s ease;
    }

    .project-card:hover .project-logo {
      background: rgba(255, 255, 255, 0.08);
      border-color: rgba(57, 255, 20, 0.3);
      box-shadow: 0 0 20px rgba(57, 255, 20, 0.2);
    }

    .project-card:hover .project-logo img {
      transform: scale(1.1);
    }

    .project-icon {
      font-size: 3rem;
      margin-bottom: 1rem;
      display: inline-block;
      animation: bounce 2s ease-in-out infinite;
      --fa-primary-color: #39ff14;
      --fa-secondary-color: #1f4fff;
      --fa-secondary-opacity: 0.6;
    }

    .project-icon .fa-brands {
      color: #0078d4;
      filter: drop-shadow(0 0 8px rgba(0, 120, 212, 0.5));
    }

    .project-card:hover .project-icon .fa-brands {
      filter: drop-shadow(0 0 12px rgba(0, 120, 212, 0.8));
    }

    @keyframes bounce {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(-10px); }
    }

    .project-title {
      font-size: 1.8rem;
      font-weight: 700;
      margin-bottom: 1rem;
      color: #fff;
    }

    .project-description {
      color: #d4d4d8;
      line-height: 1.6;
      margin-bottom: 1.5rem;
    }

    .badge-row {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
      margin-bottom: 1rem;
    }

    .badge {
      font-size: 0.75rem;
      font-weight: 600;
      padding: 0.25rem 0.6rem;
      border-radius: 999px;
      border: 1px solid rgba(255, 255, 255, 0.15);
      background: rgba(255, 255, 255, 0.05);
      color: #d4d4d8;
      letter-spacing: 0.02em;
      text-transform: uppercase;
    }

    .badge.status.alpha { border-color: rgba(245, 158, 11, 0.4); color: #f59e0b; background: rgba(245, 158, 11, 0.12); }
    .badge.status.beta { border-color: rgba(234, 179, 8, 0.4); color: #eab308; background: rgba(234, 179, 8, 0.12); }
    .badge.status.active { border-color: rgba(57, 255, 20, 0.35); color: #39ff14; background: rgba(57, 255, 20, 0.08); }
    .badge.status.mvp { border-color: rgba(168, 85, 247, 0.4); color: #a855f7; background: rgba(168, 85, 247, 0.12); }
    .badge.status.archived { border-color: rgba(239, 68, 68, 0.4); color: #ef4444; background: rgba(239, 68, 68, 0.12); }

    .badge.source.open { border-color: rgba(31, 79, 255, 0.4); color: #1f4fff; background: rgba(31, 79, 255, 0.12); }
    .badge.source.closed { border-color: rgba(239, 68, 68, 0.4); color: #ef4444; background: rgba(239, 68, 68, 0.12); }

    .card-footer {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding-top: 1rem;
      border-top: 1px solid rgba(255, 255, 255, 0.1);
    }

    .view-more {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      color: #39ff14;
      font-weight: 600;
      font-size: 0.95rem;
    }

    .view-more i {
      transition: transform 0.3s ease;
    }

    .project-card:hover .view-more i {
      transform: translateX(4px);
    }

    .empty-state {
      text-align: center;
      padding: 4rem 2rem;
      background: rgba(255, 255, 255, 0.03);
      border: 1px solid rgba(255, 255, 255, 0.1);
      border-radius: 20px;
      animation: fadeIn 0.6s ease;
    }

    .empty-icon {
      font-size: 4rem;
      margin-bottom: 1rem;
      opacity: 0.5;
    }

    .empty-state h3 {
      font-size: 1.5rem;
      margin-bottom: 0.5rem;
      color: #fff;
    }

    .empty-state p {
      color: #a1a1aa;
    }

    @media (max-width: 768px) {
      .projects-header h1 {
        font-size: 2.5rem;
      }

      .category-icon {
        font-size: 2.5rem;
      }

      .category-header h2 {
        font-size: 2rem;
      }

      .category-section {
        margin-bottom: 3rem;
      }

      .projects-grid {
        grid-template-columns: 1fr;
      }
    }
  </style>
</SiteLayout>
