---
import SiteLayout from "../../layouts/Layout.astro";
import { getCollection } from 'astro:content';

const allProjects = await getCollection('projects');
const projects = allProjects
  .filter(p => p.data.published)
  .sort((a, b) => a.data.order - b.data.order);
---
<SiteLayout title="Projects — ZentrixLabs">
  <h1 style="font-size:2rem; margin-bottom:1rem;">Projects</h1>
  <ul>
    {projects.map(({ data }) => (
      <li>
        <a href={`/projects/${data.slug}`} style="color:#39ff14;">{data.title}</a>
        <span style="opacity:0.7;"> — {data.short}</span>
      </li>
    ))}
  </ul>
</SiteLayout>
